-- âœ… Script compatible con Hydrogen / Fluxus MOBILE

local Player = game.Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local UserInputService = game:GetService("UserInputService")

local PunchEvent = ReplicatedStorage:WaitForChild("Events"):WaitForChild("Punch")

local canPunch = true
local delayBetweenPunches = 0.05  -- ðŸ•’ Tiempo realista entre golpes

local function Punch()
	if not canPunch then return end
	canPunch = false

	-- Solo 1 golpe normal por tap
	local args = {
		[1] = 0,     -- posiciÃ³n relativa
		[2] = 0.1,   -- alcance
		[3] = 1      -- tipo de combo (puedes usar 1 a 5)
	}
	PunchEvent:FireServer(unpack(args))

	-- Cooldown simulado como si fuera humano
	task.delay(delayBetweenPunches, function()
		canPunch = true
	end)
end

-- ðŸ“± Mobile tap: golpea al tocar el mundo
UserInputService.TouchTapInWorld:Connect(function()
	Punch()
end)
