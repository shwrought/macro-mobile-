local UserInputService = game:GetService("UserInputService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")

local player = Players.LocalPlayer
local PunchEvent = ReplicatedStorage:WaitForChild("Events"):WaitForChild("Punch")

local tocando = false
local puedeGolpear = true
local golpeDelay = 0.07 -- ‚ö° Velocidad ultra r√°pida

local function golpear()
	if not puedeGolpear or not tocando then return end
	puedeGolpear = false

	-- üîÅ Golpe normal + golpes extra
	for i = 1, 3 do  -- Puedes subir este n√∫mero para m√°s golpes (m√°ximo 5 recomendado)
		local args = {
			[1] = 0,
			[2] = 0.1,
			[3] = 1
		}
		PunchEvent:FireServer(unpack(args))
		task.wait(0.03) -- Peque√±o delay entre golpes extra
	end

	task.delay(golpeDelay, function()
		puedeGolpear = true
		if tocando then
			golpear()
		end
	end)
end

-- üì± Mobile: Tap para empezar a golpear r√°pido
UserInputService.TouchStarted:Connect(function()
	tocando = true
	golpear()
end)

-- üì± Mobile: Soltar pantalla detiene los golpes
UserInputService.TouchEnded:Connect(function()
	tocando = false
end)
